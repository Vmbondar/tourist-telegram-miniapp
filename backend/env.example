# ============================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ============================================
APP_NAME=Tourist Telegram Mini App
APP_VERSION=0.1.0
DEBUG=True

# Секретный ключ для JWT токенов (ОБЯЗАТЕЛЬНО!)
# Сгенерируйте случайную строку: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# БАЗА ДАННЫХ
# ============================================
# Для Docker Compose (настройки в docker-compose.yml автоматически)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tourist_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tourist_app

# Если используете свою PostgreSQL БД, укажите:
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database_name

# ============================================
# TELEGRAM BOT API (ОБЯЗАТЕЛЬНО!)
# ============================================
# Получите токен от @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
# Секретный ключ для проверки подписи initData (можно использовать тот же токен для начала)
TELEGRAM_SECRET_KEY=your-telegram-secret-key-or-same-as-token

# ============================================
# YANDEX OBJECT STORAGE (для Этапа 4)
# ============================================
# Пока можно оставить пустым, нужно будет настроить на Этапе 4
YANDEX_STORAGE_ENDPOINT=https://storage.yandexcloud.net
YANDEX_STORAGE_BUCKET=your-bucket-name
YANDEX_STORAGE_ACCESS_KEY=your-access-key
YANDEX_STORAGE_SECRET_KEY=your-secret-key
YANDEX_STORAGE_REGION=ru-central1

# ============================================
# ЮKASSA (для Этапа 5)
# ============================================
# Пока можно оставить пустым, нужно будет настроить на Этапе 5
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key
YOOKASSA_TEST_MODE=True

# ============================================
# CORS
# ============================================
# Для Telegram Mini App разрешены все источники
CORS_ORIGINS=["*"]
